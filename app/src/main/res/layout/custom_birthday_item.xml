<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rootLinearLayout"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthdayContactImageView"
            android:maxHeight="3dp"
            android:maxWidth="2dp"
            android:src="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/txt_BirthdayContactName"
                android:textSize="16sp"
                android:paddingLeft="3dp"
                android:text="Faith Olusegun"/>

            <TextView
                android:id="@+id/txt_BirthdayContactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:text="(+81)222333344"
                android:maxLength="50"
                android:ellipsize="end"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txt_BirthdayContactBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="3dp"
                    android:text="April 05"
                    android:textStyle="normal"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>




</LinearLayout>
</LinearLayout>